{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "NODE_ENV", "NEXT_PUBLIC_DEBUG", "NEXT_PUBLIC_API_URL"],
  "pipeline": {
    "@ttbs/prisma#build": {
      "cache": false,
      "dependsOn": ["post-install"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "cache": false
    },
    "post-install": {
      "dependsOn": [],
      "outputs": ["../../node_modules/@prisma/client/**"],
      "inputs": ["./schema.prisma", "./prisma/schema.prisma"]
    }
  }
}

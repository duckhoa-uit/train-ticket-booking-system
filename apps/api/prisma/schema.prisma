generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN @map("admin")
  USER  @map("user")
  STAFF @map("staff")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  role      UserRole @default(USER)
  email      String @unique

  @@map("users")
}
